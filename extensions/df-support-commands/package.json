{
  "name": "dev-cetera-df-support-commands",
  "displayName": "DF Support Commands",
  "description": "Adds right-click commands to support Dev-Cetera's Dart/Flutter packages.",
  "publisher": "dev-cetera",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.87.0"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/dev-cetera/vscode_extensions.git"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
     "onView:explorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "df-support-commands.df_generate_dart_indexes",
        "title": "ðŸ”¹ Generate Dart Barrel File"
      },
      {
        "command": "df-support-commands.df_generate_dart_models_minimal",
        "title": "ðŸ”¹ Generate Dart Models (Minimal)"
      },
      {
        "command": "df-support-commands.df_generate_dart_models",
        "title": "ðŸ”¹ Generate Dart Models (Featured)"
      },
      {
        "command": "df-support-commands.df_generate_header_comments",
        "title": "ðŸ”¹ Generate Header Comments"
      },
      {
        "command": "df-support-commands.df_generate_screen_bindings",
        "title": "ðŸ”¹ Generate Screen Bindings"
      },
      {
        "command": "df-support-commands.df_generate_screen_access",
        "title": "ðŸ”¹ Generate Screen Access"
      },
      {
        "command": "df-support-commands.df_generate_screen",
        "title": "ðŸ”¹ Generate Screen"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "df-support-commands.df_generate_dart_indexes",
          "group": "9_zcommands@1"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "df-support-commands.df_generate_header_comments",
          "group": "9_zcommands@2"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "df-support-commands.df_generate_dart_models",
          "group": "9_zcommands@3"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "df-support-commands.df_generate_dart_models_minimal",
          "group": "9_zcommands@4"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "df-support-commands.df_generate_screen",
          "group": "9_zcommands@5"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "df-support-commands.df_generate_screen_bindings",
          "group": "9_zcommands@6"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "df-support-commands.df_generate_screen_access",
          "group": "9_zcommands@7"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint . --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/node": "18.x",
    "typescript": "^5.1.3"
  }
}